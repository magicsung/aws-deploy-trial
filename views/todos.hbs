{{>message}}

<a href="/todos/new"> Create</a>
<ul>
  {{#each todos }}
  <li>
    <input  type="checkbox" disabled {{#if this.isDone}} checked {{/if}}>
    {{this.name}} 
    {{!-- 注意此處沒有指定遍歷元素的參數 所以只能用this --}}
    <a href="/todos/{{this.id}}">detail</a>
    <a href="/todos/{{this.id}}/edit">edit</a>
    <form action="/todos/{{this.id}}?_method=DELETE" method="POST" style="display: inline;"> <button type="submit" >delete</button></form>
  </li>
  {{/each}}


<ul>
 <form action="/todos" method="GET" style="display: inline;">
  <input type="hidden" name="page" value="{{prev}}">
  <button type="submit">prev</button>
 </form>

  <span>page : {{page}} </span>

  <form action="/todos" method="GET" style="display: inline;">
    <input type="hidden" name="page" value="{{next}}">
    <button type="submit">next</button>
 </form>
</ul>

